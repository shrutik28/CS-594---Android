<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="0"
        android:gravity="right" />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="Del"
        android:id="@+id/btnDEL"
        android:layout_below="@+id/editText"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="7"
        android:id="@+id/button2"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_above="@+id/button8"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="8"
        android:id="@+id/button3"
        android:textStyle="bold"
        android:layout_above="@+id/button6"
        android:layout_toEndOf="@+id/button2"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="9"
        android:id="@+id/button4"
        android:textStyle="bold"
        android:layout_alignTop="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="/"
        android:id="@+id/btnD"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignTop="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="4"
        android:id="@+id/button6"
        android:textStyle="bold"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button3"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="5"
        android:id="@+id/button7"
        android:textStyle="bold"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="6"
        android:id="@+id/button8"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_above="@+id/button11"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="*"
        android:id="@+id/btnM"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/btnD"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="1"
        android:id="@+id/button10"
        android:textStyle="bold"
        android:layout_above="@+id/button14"
        android:layout_alignParentStart="true"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="2"
        android:id="@+id/button11"
        android:textStyle="bold"
        android:layout_alignTop="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="3"
        android:id="@+id/button12"
        android:textStyle="bold"
        android:layout_above="@+id/btnE"
        android:layout_alignStart="@+id/btnE"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="-"
        android:id="@+id/btnS"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/button12"
        android:layout_toEndOf="@+id/button8"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="."
        android:id="@+id/button14"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button11"
        android:layout_alignParentBottom="true"
        android:textSize="20sp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="0"
        android:id="@+id/button15"
        android:textStyle="bold"
        android:layout_alignTop="@+id/button14"
        android:layout_toEndOf="@+id/button14"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="="
        android:id="@+id/btnE"
        android:textStyle="bold"
        android:layout_alignTop="@+id/button15"
        android:layout_toStartOf="@+id/btnS"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="+"
        android:id="@+id/btnP"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btnE"
        android:layout_toEndOf="@+id/btnE"
        android:textSize="20sp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Scientific"
        android:id="@+id/buttonfunc"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_alignTop="@+id/btnDEL"
        android:layout_alignParentStart="true" />


</RelativeLayout>
